<document xmlns="http://maven.apache.org/changes/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/changes/2.0.0 https://maven.apache.org/xsd/changes-2.0.0.xsd">
  <body>

    <release version="1.3.2" date="2025-03-31">
      <action type="add" dev="sseifert">
        Switch from javax.json to jakarta.json.
      </action>
    </release>

    <release version="1.3.0" date="2023-01-26">
      <action type="add" dev="sseifert" issue="9">
        Introduce new output format JSON_PROPERTIES: Flat list of key/value pairs in JSON format.
      </action>
      <action type="update" dev="sseifert" issue="8">
        Switch from org.apache.sling.commons.json to Johnzon (javax.json).
      </action>
      <action type="update" dev="sseifert">
        Switch to Java 11 as minimum version.
      </action>
    </release>

    <release version="1.2.2" date="2022-01-27">
      <action type="update" dev="sseifert">
        Declare Maven core dependencies as provided.
      </action>
    </release>

    <release version="1.2.0" date="2018-10-17">
      <action type="add" dev="amuthmann">
        Add 'properties' as supported output format.
      </action>
    </release>

    <release version="1.1.0" date="2016-04-29">
      <action type="update" dev="sseifert">
        Add m2e lifecycle mapping with support for incremental build.
      </action>
    </release>

    <release version="1.0.0" date="2015-03-20">
      <action type="add" dev="sseifert">
        Initial release.
      </action>
    </release>

  </body>
</document>
